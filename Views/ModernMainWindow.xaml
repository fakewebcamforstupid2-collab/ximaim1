<Window x:Class="GamepadEmulator.Views.ModernMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GamepadEmulator.Views"
        xmlns:local="clr-namespace:GamepadEmulator.Views"
        Title="Gamepad Emulator" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Control Knob Style -->
        <Style x:Key="ControlKnobStyle" TargetType="Slider">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Outer ring -->
                            <Ellipse Width="80" Height="80" Fill="#FF1A1A1A" Stroke="#FF444444" StrokeThickness="2"/>
                            <!-- Inner knob -->
                            <Ellipse Width="60" Height="60" Fill="#FF333333" Stroke="#FF666666" StrokeThickness="1"/>
                            <!-- Indicator line -->
                            <Rectangle Width="2" Height="25" Fill="#FFFFFF" 
                                      RenderTransformOrigin="0.5,1"
                                      VerticalAlignment="Center">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <!-- Center dot -->
                            <Ellipse Width="6" Height="6" Fill="#FFFFFF"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Linear/Exponential Toggle Style -->
        <Style x:Key="ModeToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFAAAAAA"/>
                                <Setter Property="Foreground" Value="#FF000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Toggle Style -->
        <Style x:Key="StatusToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#FF00FF00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background with Xbox controller image -->
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/xboxbackground.png" 
                       Stretch="UniformToFill" 
                       Opacity="0.3"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Grid Grid.Row="0" Background="#33000000" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <!-- Left side - App icon and tabs -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">
                <!-- App Icon -->
                <Border Width="40" Height="40" Background="#FF444444" CornerRadius="4" Margin="0,0,20,0">
                    <TextBlock Text="ðŸŽ®" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Navigation Tabs -->
                <Button Content="HOME" Style="{StaticResource TabButtonStyle}" 
                        Background="#FF444444" Click="HomeTab_Click"/>
                <Button Content="CONFIG" Style="{StaticResource TabButtonStyle}" Click="ConfigTab_Click"/>
                <Button Content="LOG" Style="{StaticResource TabButtonStyle}" Click="LogTab_Click"/>
                <Button Content="CROSSHAIR" Style="{StaticResource TabButtonStyle}" Click="CrosshairTab_Click"/>
                <Button Content="SCRIPTS" Style="{StaticResource TabButtonStyle}" Click="ScriptsTab_Click"/>

                <!-- Spacer -->
                <Border Width="1" Height="20" Background="#FF555555" Margin="20,0"/>

                <!-- Control Buttons -->
                <Button Content="Start" Command="{Binding StartCommand}" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="Stop" Command="{Binding StopCommand}" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="{Binding IsPaused, StringFormat='Pause/Resume ({0})'}" Command="{Binding PauseResumeCommand}" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="PANIC" Command="{Binding PanicCommand}" Style="{StaticResource TabButtonStyle}" Foreground="Red"/>
            </StackPanel>

            <!-- Right side - window controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- Window Controls -->
                <Button Content="âˆ’" Width="30" Height="30" Background="Transparent" 
                        Foreground="#FFCCCCCC" BorderThickness="0" Click="Minimize_Click"/>
                <Button Content="âœ•" Width="30" Height="30" Background="Transparent" 
                        Foreground="#FFCCCCCC" BorderThickness="0" Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">

            <!-- Home Content -->
            <Grid x:Name="HomeContent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Central Controller Area -->
                <Grid Grid.Column="0">
                    <!-- Controller with button mappings -->
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="400">
                        <!-- Central Xbox Controller -->
                        <Border Canvas.Left="200" Canvas.Top="100" Width="200" Height="200"
                               Background="Transparent">
                            <views:GamepadControllerView x:Name="ControllerView"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Button Labels with dotted lines -->
                        <!-- Left Trigger -->
                        <StackPanel Canvas.Left="120" Canvas.Top="80" Orientation="Horizontal">
                            <TextBlock Text="LT" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="5,8,0,0"/>
                        </StackPanel>

                        <!-- Left Bumper -->
                        <StackPanel Canvas.Left="120" Canvas.Top="110" Orientation="Horizontal">
                            <TextBlock Text="LB" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="5,8,0,0"/>
                        </StackPanel>

                        <!-- Left Stick -->
                        <StackPanel Canvas.Left="120" Canvas.Top="200" Orientation="Horizontal">
                            <TextBlock Text="L" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="5,8,0,0"/>
                        </StackPanel>

                        <!-- Right Trigger -->
                        <StackPanel Canvas.Left="430" Canvas.Top="80" Orientation="Horizontal">
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="0,8,5,0"/>
                            <TextBlock Text="RT" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                        </StackPanel>

                        <!-- Right Bumper -->
                        <StackPanel Canvas.Left="430" Canvas.Top="110" Orientation="Horizontal">
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="0,8,5,0"/>
                            <TextBlock Text="RB" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                        </StackPanel>

                        <!-- Y Button -->
                        <StackPanel Canvas.Left="430" Canvas.Top="140" Orientation="Horizontal">
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="0,8,5,0"/>
                            <TextBlock Text="Y" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                        </StackPanel>

                        <!-- B Button -->
                        <StackPanel Canvas.Left="430" Canvas.Top="170" Orientation="Horizontal">
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="0,8,5,0"/>
                            <TextBlock Text="B" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                        </StackPanel>

                        <!-- X Button -->
                        <StackPanel Canvas.Left="430" Canvas.Top="200" Orientation="Horizontal">
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="0,8,5,0"/>
                            <TextBlock Text="X" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                        </StackPanel>

                        <!-- A Button -->
                        <StackPanel Canvas.Left="430" Canvas.Top="230" Orientation="Horizontal">
                            <Line X1="0" Y1="0" X2="50" Y2="0" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2" Margin="0,8,5,0"/>
                            <TextBlock Text="A" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2"/>
                        </StackPanel>

                        <!-- Menu Button -->
                        <StackPanel Canvas.Left="320" Canvas.Top="120" Orientation="Vertical" HorizontalAlignment="Center">
                            <Line X1="0" Y1="0" X2="0" Y2="30" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2"/>
                            <TextBlock Text="â˜°" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- View Button -->
                        <StackPanel Canvas.Left="280" Canvas.Top="120" Orientation="Vertical" HorizontalAlignment="Center">
                            <Line X1="0" Y1="0" X2="0" Y2="30" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2"/>
                            <TextBlock Text="âŠ¡" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- D-Pad -->
                        <StackPanel Canvas.Left="200" Canvas.Top="300" Orientation="Vertical" HorizontalAlignment="Center">
                            <Line X1="0" Y1="0" X2="0" Y2="20" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2"/>
                            <TextBlock Text="+" Foreground="#FFCCCCCC" FontSize="16"
                                      Background="#33000000" Padding="4,2" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Right Stick -->
                        <StackPanel Canvas.Left="350" Canvas.Top="300" Orientation="Vertical" HorizontalAlignment="Center">
                            <Line X1="0" Y1="0" X2="0" Y2="20" Stroke="#FFCCCCCC"
                                  StrokeThickness="1" StrokeDashArray="2,2"/>
                            <TextBlock Text="R" Foreground="#FFCCCCCC" FontSize="12"
                                      Background="#33000000" Padding="4,2" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Canvas>
                </Grid>

                <!-- Right Control Panel -->
                <Grid Grid.Column="1" Background="#22000000" Margin="0,20,20,20">
                    <StackPanel Margin="20" VerticalAlignment="Center">
                        <!-- Dead Zone -->
                        <TextBlock Text="Dead Zone" Foreground="#FFCCCCCC" FontWeight="Bold"
                                  FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Slider x:Name="DeadZoneSlider" Style="{StaticResource ControlKnobStyle}"
                                Minimum="0" Maximum="100" Value="5" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <!-- Horizontal -->
                        <TextBlock Text="Horizontal" Foreground="#FFCCCCCC" FontWeight="Bold"
                                  FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Slider x:Name="HorizontalSlider" Style="{StaticResource ControlKnobStyle}"
                                Minimum="0.1" Maximum="3.0" Value="{Binding Sensitivity}" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <!-- Vertical -->
                        <TextBlock Text="Vertical" Foreground="#FFCCCCCC" FontWeight="Bold"
                                  FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Slider x:Name="VerticalSlider" Style="{StaticResource ControlKnobStyle}"
                                Minimum="0.1" Maximum="3.0" Value="{Binding Sensitivity}" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <!-- DoubleMVM -->
                        <TextBlock Text="DoubleMVM" Foreground="#FFCCCCCC" FontWeight="Bold"
                                  FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Slider x:Name="DoubleMVMSlider" Style="{StaticResource ControlKnobStyle}"
                                Minimum="0" Maximum="100" Value="0" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <!-- Noise Filter -->
                        <TextBlock Text="Noise Filter" Foreground="#FFCCCCCC" FontWeight="Bold"
                                  FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Slider x:Name="NoiseFilterSlider" Style="{StaticResource ControlKnobStyle}"
                                Minimum="0" Maximum="100" Value="15" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Config Content -->
            <Grid x:Name="ConfigContent" Visibility="Collapsed" Background="#11FFFFFF" Margin="20">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Stick -->
                    <GroupBox Grid.Column="0" Header="Left Stick (WASD)" Margin="5" Foreground="White">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding LeftStickX, StringFormat='X: {0}'}" Foreground="White"/>
                            <TextBlock Text="{Binding LeftStickY, StringFormat='Y: {0}'}" Foreground="White"/>
                            <ProgressBar Value="{Binding LeftStickX}" Minimum="-32767" Maximum="32767"
                                         Width="100" Height="10" Margin="5"/>
                            <ProgressBar Value="{Binding LeftStickY}" Minimum="-32767" Maximum="32767"
                                         Width="100" Height="10" Margin="5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Right Stick -->
                    <GroupBox Grid.Column="1" Header="Right Stick (Mouse)" Margin="5" Foreground="White">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding RightStickX, StringFormat='X: {0}'}" Foreground="White"/>
                            <TextBlock Text="{Binding RightStickY, StringFormat='Y: {0}'}" Foreground="White"/>
                            <ProgressBar Value="{Binding RightStickX}" Minimum="-32767" Maximum="32767"
                                         Width="100" Height="10" Margin="5"/>
                            <ProgressBar Value="{Binding RightStickY}" Minimum="-32767" Maximum="32767"
                                         Width="100" Height="10" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Log Content -->
            <Grid x:Name="LogContent" Visibility="Collapsed" Margin="20">
                <GroupBox Header="Log Output" Margin="10" Foreground="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding LogMessages}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="Foreground" Value="#FFCCCCCC"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Grid Grid.Row="2" Background="#44000000">
            <!-- Left side status indicators -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="{Binding StatusText}" Foreground="#FFAAAAAA" FontSize="10"/>
            </StackPanel>
            
            <!-- Right side controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- F3 - Hide -->
                <Border Background="#FF333333" CornerRadius="3" Padding="5,2" Margin="0,0,10,0">
                    <TextBlock Text="F3" Foreground="#FFCCCCCC" FontSize="9" FontWeight="Bold"/>
                </Border>
                <Button Content="Hide" Background="Transparent" Foreground="#FFAAAAAA" 
                       BorderThickness="0" FontSize="10" Click="HideToTray_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>