<Window x:Class="GamepadEmulator.Views.ModernMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GamepadEmulator.Views"
        xmlns:converters="clr-namespace:GamepadEmulator.Views.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Gamepad Emulator" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Control Knob Style -->
        <Style x:Key="ControlKnobStyle" TargetType="Slider">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Outer ring -->
                            <Ellipse Width="80" Height="80" Fill="#FF1A1A1A" Stroke="#FF444444" StrokeThickness="2"/>
                            <!-- Inner knob -->
                            <Ellipse Width="60" Height="60" Fill="#FF333333" Stroke="#FF666666" StrokeThickness="1"/>
                            <!-- Indicator line -->
                            <Rectangle Width="2" Height="25" Fill="#FFFFFF" 
                                      RenderTransformOrigin="0.5,1"
                                      VerticalAlignment="Center">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={x:Static converters:ValueToAngleConverter.Instance}}"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <!-- Center dot -->
                            <Ellipse Width="6" Height="6" Fill="#FFFFFF"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Linear/Exponential Toggle Style -->
        <Style x:Key="ModeToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFAAAAAA"/>
                                <Setter Property="Foreground" Value="#FF000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Toggle Style -->
        <Style x:Key="StatusToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#FF00FF00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Control Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Panic Button Style -->
        <Style x:Key="PanicButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Mapping Button Style -->
        <Style x:Key="MappingButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <!-- Xbox360Button enum values -->
        <x:Array x:Key="XboxButtons" Type="sys:String">
            <sys:String>A</sys:String>
            <sys:String>B</sys:String>
            <sys:String>X</sys:String>
            <sys:String>Y</sys:String>
            <sys:String>Up</sys:String>
            <sys:String>Down</sys:String>
            <sys:String>Left</sys:String>
            <sys:String>Right</sys:String>
            <sys:String>Start</sys:String>
            <sys:String>Back</sys:String>
            <sys:String>LeftShoulder</sys:String>
            <sys:String>RightShoulder</sys:String>
            <sys:String>LeftThumb</sys:String>
            <sys:String>RightThumb</sys:String>
        </x:Array>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Grid Grid.Row="0" Background="#1A000000" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <!-- Left side - App icon and tabs -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">
                <!-- App Icon -->
                <Border Width="40" Height="40" Background="#FF444444" CornerRadius="4" Margin="0,0,20,0">
                    <TextBlock Text="Q" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                </Border>
                
                <!-- Navigation Tabs -->
                <Button Content="HOME" Style="{StaticResource TabButtonStyle}" 
                        Background="#FF444444" Click="HomeTab_Click"/>
                <Button Content="CONFIG" Style="{StaticResource TabButtonStyle}" Click="ConfigTab_Click"/>
                <Button Content="CROSSHAIR" Style="{StaticResource TabButtonStyle}" Click="CrosshairTab_Click"/>
                <Button Content="SCRIPTS" Style="{StaticResource TabButtonStyle}" Click="ScriptsTab_Click"/>
                <Button Content="E" Style="{StaticResource TabButtonStyle}" />
            </StackPanel>

            <!-- Right side - Linear/Exponential toggles and window controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <!-- Linear/Exponential Toggle -->
                <ToggleButton Content="Linear" Style="{StaticResource ModeToggleStyle}" 
                             Margin="0,0,10,0" x:Name="LinearToggle" IsChecked="{Binding IsExponentialCurve, Converter={x:Static converters:InverseBoolConverter.Instance}}"/>
                <ToggleButton Content="Exponential" Style="{StaticResource ModeToggleStyle}" 
                             IsChecked="{Binding IsExponentialCurve}" Margin="0,0,20,0" x:Name="ExponentialToggle"/>
                
                <!-- Window Controls -->
                <Button Content="−" Width="30" Height="30" Background="Transparent" 
                        Foreground="#FFCCCCCC" BorderThickness="0" Click="Minimize_Click"/>
                <Button Content="✕" Width="30" Height="30" Background="Transparent" 
                        Foreground="#FFCCCCCC" BorderThickness="0" Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Central Controller Area -->
            <Grid Grid.Column="0">
                <Grid.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Assets/Images/xboxbackground.png" Stretch="Uniform" />
                </Grid.Background>
                <!-- Controller with button mappings -->
                <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="400">
                    <!-- Central Xbox Controller -->

                    <!-- Button Labels with dotted lines -->
                    <!-- Left Trigger -->
                    <StackPanel Canvas.Left="120" Canvas.Top="80" Orientation="Horizontal"/>

                    <!-- Left Bumper -->
                    <StackPanel Canvas.Left="120" Canvas.Top="110" Orientation="Horizontal"/>

                    <!-- Left Stick -->

                    <!-- Right Trigger -->

                    <!-- Right Bumper -->

                    <!-- Y Button -->

                    <!-- B Button -->
                    <StackPanel Canvas.Left="430" Canvas.Top="170" Orientation="Horizontal"/>

                    <!-- X Button -->

                    <!-- A Button -->
                    <StackPanel Canvas.Left="430" Canvas.Top="230" Orientation="Horizontal"/>

                    <!-- Menu Button -->

                    <!-- View Button -->

                    <!-- D-Pad -->
                    <StackPanel Canvas.Left="200" Canvas.Top="300" Orientation="Vertical" HorizontalAlignment="Center"/>

                    <!-- Right Stick -->
                    <StackPanel Canvas.Left="350" Canvas.Top="300" Orientation="Vertical" HorizontalAlignment="Center"/>
                </Canvas>
                
                <!-- Mapping Configuration Panel (Hidden by default, shown when CONFIG tab is clicked) -->
                <Grid x:Name="MappingConfigPanel" Visibility="Collapsed" Background="#AA000000" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="300">
                    <Border Background="#FF222222" BorderBrush="#FF444444" BorderThickness="2" CornerRadius="5">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Key Mapping Configuration" Foreground="#FFCCCCCC" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            
                            <!-- Key Code Input -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Key Code:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Width="100"/>
                                <TextBox x:Name="KeyCodeTextBox" Style="{StaticResource TextBoxStyle}" Width="100" Text="{Binding SelectedKeyCode}"/>
                                <Button Content="{Binding CaptureButtonText}" Command="{Binding CaptureKeyCommand}" Style="{StaticResource MappingButtonStyle}" Margin="10,0,0,0"/>
                            </StackPanel>
                            
                            <!-- Button Mapping -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Map to Button:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Width="100"/>
                                <ComboBox x:Name="ButtonComboBox" Style="{StaticResource ComboBoxStyle}" Width="150" 
                                          ItemsSource="{StaticResource XboxButtons}" 
                                          SelectedItem="{Binding SelectedButtonString}"/>
                                <Button Content="Add Button Mapping" Command="{Binding AddButtonMappingCommand}" Style="{StaticResource MappingButtonStyle}" Margin="10,0,0,0"/>
                            </StackPanel>
                            
                            <!-- Movement Mapping -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Map to Axis:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Width="100"/>
                                <ComboBox x:Name="AxisComboBox" Style="{StaticResource ComboBoxStyle}" Width="100" SelectedIndex="{Binding SelectedAxis}">
                                    <ComboBoxItem Content="X-Axis"/>
                                    <ComboBoxItem Content="Y-Axis"/>
                                </ComboBox>
                                <ComboBox x:Name="DirectionComboBox" Style="{StaticResource ComboBoxStyle}" Width="100" SelectedIndex="{Binding SelectedDirectionIndex}" Margin="10,0,0,0">
                                    <ComboBoxItem Content="Positive"/>
                                    <ComboBoxItem Content="Negative"/>
                                </ComboBox>
                                <Button Content="Add Movement Mapping" Command="{Binding AddMovementMappingCommand}" Style="{StaticResource MappingButtonStyle}" Margin="10,0,0,0"/>
                            </StackPanel>
                            
                            <!-- Remove Mapping -->
                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Remove Mapping:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Width="100"/>
                                <Button Content="Remove Mapping" Command="{Binding RemoveMappingCommand}" Style="{StaticResource MappingButtonStyle}"/>
                            </StackPanel>
                            
                            <!-- Close Button -->
                            <Button Grid.Row="5" Content="Close" Click="CloseMappingConfig_Click" Style="{StaticResource ControlButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Right Control Panel -->
            <Grid Grid.Column="1" Background="#22000000" Margin="0,20,20,20">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <!-- Dead Zone -->
                    <TextBlock Text="Dead Zone" Foreground="#FFCCCCCC" FontWeight="Bold" 
                              FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Slider x:Name="DeadZoneSlider" Style="{StaticResource ControlKnobStyle}" 
                            Minimum="0" Maximum="100" Value="{Binding DeadZone}" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <!-- Horizontal -->
                    <TextBlock Text="Horizontal" Foreground="#FFCCCCCC" FontWeight="Bold" 
                              FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Slider x:Name="HorizontalSlider" Style="{StaticResource ControlKnobStyle}" 
                            Minimum="0.1" Maximum="3.0" Value="{Binding HorizontalSensitivity}" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <!-- Vertical -->
                    <TextBlock Text="Vertical" Foreground="#FFCCCCCC" FontWeight="Bold" 
                              FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Slider x:Name="VerticalSlider" Style="{StaticResource ControlKnobStyle}" 
                            Minimum="0.1" Maximum="3.0" Value="{Binding VerticalSensitivity}" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <!-- DoubleMVM -->
                    <TextBlock Text="DoubleMVM" Foreground="#FFCCCCCC" FontWeight="Bold" 
                              FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Slider x:Name="DoubleMVMSlider" Style="{StaticResource ControlKnobStyle}" 
                            Minimum="0" Maximum="100" Value="{Binding DoubleMvm}" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <!-- Noise Filter -->
                    <TextBlock Text="Noise Filter" Foreground="#FFCCCCCC" FontWeight="Bold" 
                              FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Slider x:Name="NoiseFilterSlider" Style="{StaticResource ControlKnobStyle}" 
                            Minimum="0" Maximum="100" Value="{Binding NoiseFilter}" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Bottom Control Panel -->
        <Grid Grid.Row="2" Background="#44000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Controls Panel -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Start" Command="{Binding StartCommand}" Style="{StaticResource ControlButtonStyle}" />
                <Button Content="Stop" Command="{Binding StopCommand}" Style="{StaticResource ControlButtonStyle}" />
                <Button Content="{Binding IsPaused, StringFormat='Pause/Resume ({0})'}" 
                        Command="{Binding PauseResumeCommand}" Style="{StaticResource ControlButtonStyle}" />
                <Button Content="PANIC" Command="{Binding PanicCommand}" 
                        Style="{StaticResource PanicButtonStyle}"/>
            </StackPanel>
            
            <!-- Settings Panel -->
            <Grid Grid.Row="1" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Stick -->
                <GroupBox Grid.Column="0" Header="Left Stick (WASD)" Margin="5" Foreground="#FFCCCCCC" BorderBrush="#FF555555">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding LeftStickX, StringFormat='X: {0}'}" Foreground="#FFCCCCCC" />
                        <TextBlock Text="{Binding LeftStickY, StringFormat='Y: {0}'}" Foreground="#FFCCCCCC" />
                        <ProgressBar Value="{Binding LeftStickX}" Minimum="-32767" Maximum="32767" 
                                     Width="100" Height="10" Margin="5" Background="#FF333333" Foreground="#FF0080FF"/>
                        <ProgressBar Value="{Binding LeftStickY}" Minimum="-32767" Maximum="32767" 
                                     Width="100" Height="10" Margin="5" Background="#FF333333" Foreground="#FF0080FF"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Right Stick -->
                <GroupBox Grid.Column="1" Header="Right Stick (Mouse)" Margin="5" Foreground="#FFCCCCCC" BorderBrush="#FF555555">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding RightStickX, StringFormat='X: {0}'}" Foreground="#FFCCCCCC" />
                        <TextBlock Text="{Binding RightStickY, StringFormat='Y: {0}'}" Foreground="#FFCCCCCC" />
                        <ProgressBar Value="{Binding RightStickX}" Minimum="-32767" Maximum="32767" 
                                     Width="100" Height="10" Margin="5" Background="#FF333333" Foreground="#FF00FF00"/>
                        <ProgressBar Value="{Binding RightStickY}" Minimum="-32767" Maximum="32767" 
                                     Width="100" Height="10" Margin="5" Background="#FF333333" Foreground="#FF00FF00"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
            
            <!-- Status Bar -->
            <StatusBar Grid.Row="2" Background="#22000000">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusText}" Foreground="#FFCCCCCC" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>