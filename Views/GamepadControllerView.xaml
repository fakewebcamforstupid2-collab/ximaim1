<UserControl x:Class="GamepadEmulator.Views.GamepadControllerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Xbox Controller Visual -->
        <Viewbox Width="400" Height="300">
            <Canvas Width="400" Height="300">
                <!-- Controller Body -->
                <Ellipse Canvas.Left="100" Canvas.Top="80" Width="200" Height="140" 
                         Fill="#FF404040" Stroke="#FF606060" StrokeThickness="2"/>
                
                <!-- D-Pad -->
                <Grid Canvas.Left="140" Canvas.Top="180">
                    <Rectangle Width="8" Height="24" Fill="#FF808080" HorizontalAlignment="Center"/>
                    <Rectangle Width="24" Height="8" Fill="#FF808080" VerticalAlignment="Center"/>
                    <Ellipse Width="6" Height="6" Fill="#FFCCCCCC" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Left Stick -->
                <Ellipse Canvas.Left="120" Canvas.Top="120" Width="40" Height="40" 
                         Fill="#FF2A2A2A" Stroke="#FF606060" StrokeThickness="2"/>
                <Ellipse Canvas.Left="135" Canvas.Top="135" Width="10" Height="10" 
                         Fill="#FFCCCCCC" x:Name="LeftStickIndicator"/>
                
                <!-- Right Stick -->
                <Ellipse Canvas.Left="240" Canvas.Top="160" Width="40" Height="40" 
                         Fill="#FF2A2A2A" Stroke="#FF606060" StrokeThickness="2"/>
                <Ellipse Canvas.Left="255" Canvas.Top="175" Width="10" Height="10" 
                         Fill="#FFCCCCCC" x:Name="RightStickIndicator"/>
                
                <!-- Action Buttons -->
                <Ellipse Canvas.Left="280" Canvas.Top="100" Width="20" Height="20" 
                         Fill="#FF008000" x:Name="ButtonA"/>
                <TextBlock Canvas.Left="287" Canvas.Top="107" Text="A" Foreground="White" 
                          FontWeight="Bold" FontSize="10"/>
                
                <Ellipse Canvas.Left="260" Canvas.Top="80" Width="20" Height="20" 
                         Fill="#FF0080FF" x:Name="ButtonX"/>
                <TextBlock Canvas.Left="267" Canvas.Top="87" Text="X" Foreground="White" 
                          FontWeight="Bold" FontSize="10"/>
                
                <Ellipse Canvas.Left="300" Canvas.Top="80" Width="20" Height="20" 
                         Fill="#FFFF8000" x:Name="ButtonB"/>
                <TextBlock Canvas.Left="307" Canvas.Top="87" Text="B" Foreground="White" 
                          FontWeight="Bold" FontSize="10"/>
                
                <Ellipse Canvas.Left="280" Canvas.Top="60" Width="20" Height="20" 
                         Fill="#FFFFFF00" x:Name="ButtonY"/>
                <TextBlock Canvas.Left="287" Canvas.Top="67" Text="Y" Foreground="Black" 
                          FontWeight="Bold" FontSize="10"/>
                
                <!-- Shoulder Buttons -->
                <Rectangle Canvas.Left="80" Canvas.Top="60" Width="30" Height="15" 
                          Fill="#FF808080" x:Name="LeftShoulder"/>
                <TextBlock Canvas.Left="88" Canvas.Top="62" Text="LB" Foreground="White" 
                          FontWeight="Bold" FontSize="8"/>
                
                <Rectangle Canvas.Left="290" Canvas.Top="60" Width="30" Height="15" 
                          Fill="#FF808080" x:Name="RightShoulder"/>
                <TextBlock Canvas.Left="298" Canvas.Top="62" Text="RB" Foreground="White" 
                          FontWeight="Bold" FontSize="8"/>
                
                <!-- Center Buttons -->
                <Rectangle Canvas.Left="170" Canvas.Top="110" Width="15" Height="10" 
                          Fill="#FF606060" x:Name="BackButton"/>
                <TextBlock Canvas.Left="174" Canvas.Top="111" Text="⟵" Foreground="White" 
                          FontWeight="Bold" FontSize="8"/>
                
                <Rectangle Canvas.Left="215" Canvas.Top="110" Width="15" Height="10" 
                          Fill="#FF606060" x:Name="StartButton"/>
                <TextBlock Canvas.Left="219" Canvas.Top="111" Text="☰" Foreground="White" 
                          FontWeight="Bold" FontSize="8"/>
                
                <!-- Xbox Logo -->
                <Ellipse Canvas.Left="190" Canvas.Top="90" Width="20" Height="20" 
                         Fill="#FF107C10"/>
                <TextBlock Canvas.Left="196" Canvas.Top="96" Text="⚬" Foreground="White" 
                          FontWeight="Bold" FontSize="12"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>